---
import Navbar from "./React/NavBar";
import SVGComponent from "./SVGComponent.astro";
import TitleMain from "../components/TitleMain.astro";
import PerfilAnimation from "./PerfilAnimation.astro";
---

<div class="w-full h-full">
  
  <Navbar client:only="react" />
  <section
    class="flex w-full h-10 justify-center items-center bg-gray-100 dark:bg-[#062333] gap-2.5 sm:gap-10 md:gap-16 lg:hidden"
  >
    <SVGComponent />
  </section>

  <section
    class="flex w-full h-full flex-col items-center font-bold pt-7 lg:-pt-0 lg:justify-center xl:flex-row xl:justify-between xl:px-60 2xl:px-80"
  >
    <div
      class="flex flex-col items-center font-bold font-cantora space-y-2 2xl:space-y-4 xl:w-1/2 xl:items-start"
    >
      <span
        class="text-xl lg:text-2xl 2xl:text-3xl dark:text-white font-cantora"
        >Hola 👋🏼, soy</span
      >
      <TitleMain title="Jesús Noé Echeverria" />
      <span class="text-base lg:text-xl 2xl:text-2xl dark:text-white font-signika"
        >Ingeniero en Sistemas Computacionales</span
      >
      <span
        class="text-lg lg:text-xl 2xl:text-3xl text-rose-700 dark:text-yellow-400"
        >Web Developer!!</span
      >
      <p class="text-sm lg:text-base 2xl:text-lg dark:text-gray-300 font-normal font-signika">+2 años de experiencia en desarrollo web.</p>
    </div>
    <div class="pt-12 lg:pt-0 xl:w-1/2 ">
      <PerfilAnimation />
    </div>
  </section>
</div>
