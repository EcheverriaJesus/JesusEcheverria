/* Realizar peticion a la Api mediante url con la funcion Fetch */
const response = await fetch("https://jsonplaceholder.typicode.com/posts");
/* Convertir la respuesta delfetch en Json y poder manipular los datos en nuestro cÃ³digo */
const posts = await response.json();
/* Imprimir los datos tal ycomo los pide el fetch */
console.log(response)
/* Imprimir los datos una vez pasados a json */
console.log(posts)

/* Declaramos la interface Post para tipar los datos de la Api */
interface Post {
    userId: number;
    title: string;
    body: string;
}
---

{
    /* Mapeo de los resultados de la Api iterandolos como Post */
    posts.map((post: Post) => (
        <div>
            /* Uso de los datos de la Api en etiquetas HTML */
            <h1>{post.userId}</h1>
            <h3>{post.title}</h3>
            <p>{post.body}</p>
        </div>
    ))
}
